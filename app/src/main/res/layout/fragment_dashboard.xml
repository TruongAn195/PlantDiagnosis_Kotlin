<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.expeditee.plantdiagnosis.ui.dashboard.DashboardViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Dashboard"
                android:textSize="@dimen/_24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_light_green">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="@dimen/_28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Plants"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/_4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_light_green">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="@dimen/_28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Diagnoses"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/_4dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:background="@drawable/bg_rounded_light_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success Rate"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/_8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85.5%"
                    android:textSize="@dimen/_32sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="85"
                    android:progressTint="@color/primary_green"
                    android:layout_marginTop="@dimen/_8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp"
                android:background="@drawable/bg_rounded_light_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/_12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:text="Scan Plant"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/primary_green"
                        app:cornerRadius="@dimen/_8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_8dp"
                        android:text="View History"
                        android:textColor="@color/primary_green"
                        app:strokeColor="@color/primary_green"
 />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
