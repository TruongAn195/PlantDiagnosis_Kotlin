<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp">

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_24dp"
            android:hint="@string/search_plants"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="@dimen/_12dp"
            app:boxCornerRadiusTopEnd="@dimen/_12dp"
            app:boxCornerRadiusBottomStart="@dimen/_12dp"
            app:boxCornerRadiusBottomEnd="@dimen/_12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Plant Library Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_16dp"
            android:background="@drawable/bg_rounded_light_green">

            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/ic_plant_placeholder"
                android:layout_marginEnd="@dimen/_16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plant_library"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse plant database"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Disease Database Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_16dp"
            android:background="@drawable/bg_rounded_light_green">

            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/ic_plant_placeholder"
                android:layout_marginEnd="@dimen/_16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_database"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn about plant diseases"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Care Tips Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_16dp"
            android:background="@drawable/bg_rounded_light_green">

            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/ic_plant_placeholder"
                android:layout_marginEnd="@dimen/_16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/care_tips"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant care guides"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</layout>
