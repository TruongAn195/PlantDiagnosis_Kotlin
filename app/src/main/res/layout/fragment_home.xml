<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        tools:context=".ui.home.HomeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16dp">

                <!-- Welcome Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:cardElevation="@dimen/_4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_bold"
                            android:text="@string/welcome_to_plant_diagnosis"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            android:fontFamily="@font/notosans_regular"
                            android:text="@string/welcome_description"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/_14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions -->
                <TextView
                    android:id="@+id/tvQuickActions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="@string/quick_actions"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintTop_toBottomOf="@id/cardWelcome" />

                <!-- Action Buttons Grid -->
                <LinearLayout
                    android:id="@+id/llActionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvQuickActions">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDiagnose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_8dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_12dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_camera"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:fontFamily="@font/notosans_medium"
                                    android:gravity="center"
                                    android:text="@string/diagnose_plant"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardHistory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_8dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_12dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_history"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:fontFamily="@font/notosans_medium"
                                    android:gravity="center"
                                    android:text="@string/diagnosis_history"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardExplore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_8dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_12dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_explore"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:fontFamily="@font/notosans_medium"
                                    android:gravity="center"
                                    android:text="@string/explore_plants"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAskAi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_8dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_12dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_ai"
                                    android:contentDescription="@null" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:fontFamily="@font/notosans_medium"
                                    android:gravity="center"
                                    android:text="@string/ask_ai"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Recent Diagnoses -->
                <TextView
                    android:id="@+id/tvRecentDiagnoses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="@string/recent_diagnoses"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintTop_toBottomOf="@id/llActionButtons" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/llEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_32dp"
                    app:layout_constraintTop_toBottomOf="@id/tvRecentDiagnoses">

                    <ImageView
                        android:layout_width="@dimen/_64dp"
                        android:layout_height="@dimen/_64dp"
                        android:src="@drawable/ic_plant"
                        android:contentDescription="@null"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/notosans_medium"
                        android:text="@string/no_recent_diagnoses"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:fontFamily="@font/notosans_regular"
                        android:text="@string/start_diagnosing_plants"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>