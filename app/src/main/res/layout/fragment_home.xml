<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.HomeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16dp">

                <!-- Header Section -->
                <LinearLayout
                    android:id="@+id/llHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Logo and App Name -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivLogo"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:src="@drawable/ic_plant"
                            android:background="@drawable/bg_round_menu"
                            android:padding="@dimen/_8dp"
                            android:contentDescription="PlantPro Logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12dp"
                            android:text="PlantPro"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/_20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black" />

                    </LinearLayout>

                    <!-- Profile Picture -->
                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:src="@drawable/ic_plant"
                        android:background="@drawable/bg_round_menu"
                        android:scaleType="centerCrop"
                        android:contentDescription="User Profile" />

                </LinearLayout>

                <!-- Greeting Section -->
                <LinearLayout
                    android:id="@+id/llGreeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_24dp"
                    app:layout_constraintTop_toBottomOf="@id/llHeader">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good Morning, Sarah"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/_24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:id="@+id/tvMotivationalMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:text="Let's grow something beautiful today"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/_16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Search Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24dp"
                    app:cardCornerRadius="@dimen/_12dp"
                    app:cardElevation="@dimen/_2dp"
                    app:cardBackgroundColor="@color/light_gray"
                    app:layout_constraintTop_toBottomOf="@id/llGreeting">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Search plants name or snap a photo..."
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/_14sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/ivCamera"
                            android:layout_width="@dimen/_24dp"
                            android:layout_height="@dimen/_24dp"
                            android:src="@drawable/ic_camera"
                            android:contentDescription="Camera" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvCoreFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:text="Best Deals"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintTop_toBottomOf="@id/cardSearch"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All >"
                    android:textColor="@color/primary_green"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="@id/tvCoreFeatures"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Features Grid -->
                <LinearLayout
                    android:id="@+id/llFeaturesGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvCoreFeatures">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardPlantIdentify"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_12dp"
                            app:cardElevation="@dimen/_2dp"
                            app:strokeColor="@color/primary_green"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_16dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_camera"
                                    android:contentDescription="Plant Identify"
                                    app:tint="@color/primary_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:text="Plant Identify"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardMyPlants"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_12dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_16dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_plant"
                                    android:contentDescription="My Plants"
                                    app:tint="@color/primary_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:text="My Plants"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardPlantHealth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_12dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_16dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_plant"
                                    android:contentDescription="Plant Health"
                                    app:tint="@color/primary_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:text="Plant Health"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardReminders"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_12dp"
                            app:cardElevation="@dimen/_2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_16dp">

                                <ImageView
                                    android:layout_width="@dimen/_32dp"
                                    android:layout_height="@dimen/_32dp"
                                    android:src="@drawable/ic_history"
                                    android:contentDescription="Reminders"
                                    app:tint="@color/primary_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:text="Reminders"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/_12sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Specialist Consultation Banner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSpecialist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:layout_marginBottom="@dimen/_24dp"
                    app:cardCornerRadius="@dimen/_16dp"
                    app:cardElevation="@dimen/_4dp"
                    app:cardBackgroundColor="@color/green_light"
                    app:layout_constraintTop_toBottomOf="@id/llFeaturesGrid">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consult with the Gardening Specialist"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4dp"
                                android:text="Get expert plant advice"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/_14sp"
                                android:fontFamily="sans-serif" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAskExpert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12dp"
                                android:text="Ask the Expert"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/primary_green"
                                app:cornerRadius="@dimen/_20dp"
                                app:strokeWidth="0dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivSpecialist"
                            android:layout_width="@dimen/_80dp"
                            android:layout_height="@dimen/_80dp"
                            android:src="@drawable/ic_plant"
                            android:contentDescription="Gardening Specialist"
                            android:layout_marginStart="@dimen/_16dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Explore Plants Section -->
                <TextView
                    android:id="@+id/tvExplorePlants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:text="Explore Plants"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintTop_toBottomOf="@id/cardSpecialist" />

                <TextView
                    android:id="@+id/tvViewAllPlants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All >"
                    android:textColor="@color/primary_green"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="@id/tvExplorePlants"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Plants Carousel -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/_4dp"
                    android:paddingEnd="@dimen/_4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvExplorePlants" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>